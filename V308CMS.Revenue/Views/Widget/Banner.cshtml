                    </div>
                    <div class="hotnewsdiv2">
                        <a href="/@V308CMS.Common.Ultility.LocDau(@Model.List[i].Title)-youtube@(@Model.List[i].ID).html">@Model.List[i].Title</a>
                        <div>CFood | @Model.List[i].Views lượt xem</div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div id="panelyoutube">
        <div style="margin-top: 6px; margin-bottom: 5px; font-size: 21px;">@Model.List[0].Title</div>
        <div>
            <script src="https://apis.google.com/js/platform.js"></script>
            <div class="g-ytsubscribe" data-channelid="UCk_tjguCCBsVqt4apOylvrQ" data-layout="full" data-count="default"></div>
        </div>
        <div style="float: right; margin-top: -26px;">
            @*<div class="fb-share-button" data-href="/@V308CMS.Common.Ultility.LocDau(@Model.List[0].Title)-youtube@(@Model.List[0].ID).html" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=@V308CMS.Common.Ultility.LocDau(@Model.List[0].Title)-youtube@(@Model.List[0].ID).html;src=sdkpreparse">Chia sẻ</a></div>*@
            <div id="btshare_container" style="margin-top: -12px; width: 60px; height: 60px;">
                <div class="btimg">
                    <img src="/Content/Images/btshare.png" style="width: 100%; height: 100%;" />
                </div>
                <div id="btshare_social">
                    <span class='st_sharethis_large' displaytext='ShareThis'></span>
