@model V308CMS.Data.BannerPage
@{
    Layout = null;
}
<style type="text/css">
    #btshare_social {
        display: none;
    }

        #btshare_social:hover {
            display: block;
        }

    .btimg {
        cursor: pointer;
    }

    #btshare_container:hover #btshare_social {
        display: block !important;
        position: relative;
    }

    #btshare_social {
        position: absolute;
        width: 320px;
        top: -40px;
        left: -250px;
    }
</style>
<div class="cbo-sld-mn">
    <div class="cbo-bnr rht" id="js-index-banner1">
        <div class="is-iosld has-init">
            <div class="sld" style="position: relative; top: 0px; left: 0px; overflow: hidden; z-index: 1; perspective: 1000px; backface-visibility: hidden; width: 510px; height: 373px;">
                <iframe width="510" height="373" src="https://www.youtube.com/embed/@Model.List[0].Summary?controls=1&showinfo=1" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <div id="hotnews" style="overflow-x: hidden; overflow-y: scroll;">
        <ul>
            @for (int i = 1; i < 8; i++)
            {
                <li>
                    <div class="hotnewsdiv1">
                        <a href="/@V308CMS.Common.Ultility.LocDau(@Model.List[i].Title)-youtube@(@Model.List[i].ID).html" style="width: 43px; height: 30px; position: absolute; top: 23px; display: inline-block; left: 48px;">
                            <img style="width: 43px; height: 30px;" src="/Content/Images/playbt.png"></a>
                        <a href="/@V308CMS.Common.Ultility.LocDau(@Model.List[i].Title)-youtube@(@Model.List[i].ID).html">
