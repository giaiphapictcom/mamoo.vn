@model V308CMS.Data.NewsPage
@{
    ViewBag.Title = "ChiTietTin";
    Layout = "~/Views/Layout/_NewsLayout.cshtml";
}
<style type="text/css">
    #btshare_social {
        display: none;
    }

        #btshare_social:hover {
            display: block;
        }

    .btimg {
        cursor: pointer;
    }

    #btshare_container:hover #btshare_social {
        display: block !important;
        /*position: relative;*/
    }

    #btshare_social {
        position: absolute;
        width: 320px;
       top: -30px;
    left: -200px;
    }
</style>
<section class="wrap category no-select">
    <div class="ctnr">
        <section class="cbo-brc">
            <div class="brc-lst"><a class="next" href="/" title="Trang Chủ">Trang Chủ                </a><a class="next" href="javascript:void(0)" title="Thông tin chung">Thông tin chung                </a></div>
            <a class="atc-nm" href="/" title="Về chúng tôi">@Model.pNews.Title</a>
        </section>
        <!-- cbo-lst-mrt -->
        <div class="list-category mxClrAft">
            <div class="left-category">
                <section class="right-cmt-page">
                    <div class="title-cmt-page" style="color: #00a651; font-size: 24px; font-family: Roboto-Medium; line-height: 40px; border-bottom: 1px solid #efefef; margin-bottom: 20px; padding-bottom: 15px;">@Model.pNews.Title</div>
                    <section class="page-cmt-content">
                        <iframe width="800" height="480"  src="https://www.youtube-nocookie.com/embed/@Model.pNews.Summary" frameborder="0" allowfullscreen></iframe>
                        <div id="btshare_container" style="margin-top: 25px; width: 60px; height: 60px; display: inline-block; clear: both; position: relative; top: 65px; right: 60px;">
                            <div class="btimg">
                                <img src="/Content/Images/btshare.png" style="width:100%;height:100%;" />
                            </div>
                            <div id="btshare_social">
                                <span class='st_sharethis_large' displaytext='ShareThis'></span>
                                <span class='st_facebook_large' displaytext='Facebook'></span>
                                <span class='st_twitter_large' displaytext='Tweet'></span>
                                <span class='st_linkedin_large' displaytext='LinkedIn'></span>
                                <span class='st_pinterest_large' displaytext='Pinterest'></span>
                                <span class='st_email_large' displaytext='Email'></span>
                            </div>
                        </div>
                    </section>
                    <section>
                    </section>
                    <section>
                        <section class="cbo-brc">
                            <div class="atc-nm">Videos liên quan</div>
                        </section>
                        <ul class="ul0">
                            @foreach (V308CMS.Data.News it in Model.List)
                            {
                                <li style="display: inline-block; width: 155px; height: 180px; overflow: hidden;">
                                    <div class="hotnewsdiv1">
                                        <a href="/@V308CMS.Common.Ultility.LocDau(@it.Title)-youtube@(@it.ID).html">
                                            <img style="width:100%;" src="https://i.ytimg.com/vi/@it.Summary/hqdefault.jpg?custom=true&amp;w=90&amp;h=90&amp;stc=true&amp;jpg444=true&amp;jpgq=90&amp;sp=68"></a>
                                        <a style="font-size:13px;" href="/@V308CMS.Common.Ultility.LocDau(@it.Title)-youtube@(@it.ID).html">@it.Title</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </section>
                </section>
            </div>
            @*  <div class="right-category">
                @Html.Action("Right", "Widget")
            </div>*@
        </div>
    </div>
    <div class="clr"></div>
</section>
