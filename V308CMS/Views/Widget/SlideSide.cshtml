@model V308CMS.Data.ImagesPage
<div id="divAdLeft" style="display: none; position: absolute; top: 0px; z-index: 39;">
    <a href="/" target="_blank" title=''>
        <img src="@Model.Html" />
    </a>
</div>

<div id="divAdRight" style="display: none; position: absolute; top: 0px; z-index: 39;">
    <a href="/" target="_blank" title=''>
        <img src="@Model.HtmlNhom" />
    </a>
</div>

<script type="text/javascript">
    function FloatTopDiv() {
        startLX = ((document.body.clientWidth - MainContentW) / 2) + LeftBannerW + LeftAdjust, startLY = TopAdjust + 100;
        startRX = ((document.body.clientWidth - MainContentW) / 2) + MainContentW + RightAdjust, startRY = TopAdjust + 100;
        var d = document;
        function ml(id) {

            var el = d.getElementById ? d.getElementById(id) : d.all ? d.all[id] : d.layers[id];
            el.sP = function (x, y) { this.style.left = x + 'px'; this.style.top = y + 'px'; };
            el.x = (8 + startRX);
            el.y = startRY;
            return el;

        }
        function m2(id) {

            var e2 = d.getElementById ? d.getElementById(id) : d.all ? d.all[id] : d.layers[id];
            e2.sP = function (x, y) { this.style.left = x + 'px'; this.style.top = y + 'px'; };
            e2.x = startLX;
            e2.y = startLY;
            return e2;

        }
        window.stayTopLeft = function () {
            if (document.body.scrollTop < 6600) {
                if (document.documentElement && document.documentElement.scrollTop)
                    var pY = document.documentElement.scrollTop;
                else if (document.body)
                    var pY = document.body.scrollTop;
                if (document.body.scrollTop > 80) { startLY = 3; startRY = 3; } else { startLY = TopAdjust; startRY = TopAdjust; };
                ftlObj.y += (pY + startRY - ftlObj.y) / 16;
                ftlObj.sP(ftlObj.x, ftlObj.y);
                ftlObj2.y += (pY + startLY - ftlObj2.y) / 16;
                ftlObj2.sP(ftlObj2.x, ftlObj2.y);
            }
            setTimeout("stayTopLeft()", 1);

        }
        ftlObj = ml("divAdRight");
        //stayTopLeft(); 
        ftlObj2 = m2("divAdLeft");
        stayTopLeft();
    }
    function ShowAdDiv() {
        var objAdDivRight = document.getElementById("divAdRight");
        var objAdDivLeft = document.getElementById("divAdLeft");
        if (document.body.clientWidth < 996) {
            objAdDivRight.style.display = "block";
            objAdDivLeft.style.display = "block";
        }
        else {
            objAdDivRight.style.display = "block";
            objAdDivLeft.style.display = "block";
            FloatTopDiv();
        }
    }
</script>
<script>
    $(document).ready(function () {
        MainContentW = 996; LeftBannerW = 45; RightBannerW = 40; LeftAdjust = -260; RightAdjust = 7; TopAdjust = 45; ShowAdDiv(); window.onresize = ShowAdDiv;
    });
</script>

