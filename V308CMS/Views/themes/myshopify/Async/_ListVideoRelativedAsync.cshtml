@using V308CMS.Common
@model List<V308CMS.Data.Models.Video>
<div class="box-items box-shadow">
    <div class="container">
        <h4>Video Liên Quan</h4>
        <div class="row">
            @foreach (var video in Model)
            {

                <div class="item">
                    <div class="blog-item">
                        <div class="content-blog">
                            <a class="image video" href="@url.videoURL(video.Title, video.Id)">
                                <img src="https://i.ytimg.com/vi/@video.Code/maxresdefault.jpg" alt="@video.Title">
                                <span class="mask-play"><i class="fa fa-play"></i></span>
                            </a>
                            <div class="blog-meta">
                                <h6 class="p10">@url.VideoAnchor(video.Title, video.Id)</h6>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>