@using V308CMS.Helpers
@using V308CMS.Helpers.Url
@model V308CMS.Models.LoginModels
@{
    Layout = "~/Views/themes/" + ViewBag.domain + "/Layout/Layout.cshtml";
}
@section header {
    <title>@ViewBag.SiteName - Đăng nhập</title>
 
}
@section Breadcrumb{
    <div class="clearfix breadcrumb-wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb">
                        <h2></h2>
                        <a href="/" title="Back to the frontpage">Home</a>
                        <span class="icon"><i class="fa fa-circle"></i></span>
                        <strong>
                            Tài khoản
                        </strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="login-page">
    <div class="note form-success" id="resetSuccess" style="display: none;">
        We've sent you an email with a link to update your password.
    </div>
    <form method="post" action="@Url.AccountLoginUrl()" id="customer_login" accept-charset="UTF-8">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ReturnUrl)
        <input type="hidden" value="customer_login" name="form_type">
        <input type="hidden" name="utf8" value="✓">
        <header class="page-header">
            <h1>Đăng nhập</h1>
        </header>
        <span class="field-validation-error">@Html.Raw(ViewBag.Error)</span>
        <label for="@Model.Email"><span>Email</span><em>*</em></label>
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
        <label for="@Model.Password"><span>Mật khẩu</span><em>*</em></label>
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)       
        <div class="action-btn">
            <p>
                <input type="submit" class="btn" value="Đăng nhập">
            </p>
            <p>
                <label style="font-weight: bold;">Hoặc</label>
                <div class="form-group last">
                    <a href="@Url.SocialLoginFacebookUrl()" class="btn btn-block btn-social btn-facebook user-name-loginfb" title="Đăng nhập bằng Facebook" style="width: 380px" target="_blank">
                        <i class="fa fa-facebook"></i>
                        <span>Đăng nhập bằng Facebook</span>
                    </a>
                    <a href="@Url.SocialLoginGoogleUrl()" class="btn btn-block btn-social btn-google user-name-login-google" style="width: 380px;" title="Đăng nhập bằng Google">
                        <i class="fa fa-google-plus"></i>
                        <span>Đăng nhập bằng Google</span>                        
                    </a>
                </div>
            </p>
            <p>
                Chưa có tài khoản? Nhấn vào <a href="@Url.AccounRegisterUrl()" title="Đăng ký tài khoản">đây</a> để đăng ký tài khoản
            </p>
            <p class="last">
                Quên mật khẩu? Nhấn vào <a href="#" onclick="showRecoverPasswordForm();return false;">đây</a>
                <span>hoặc</span> <a href="/">Quay lại trang chủ</a>
            </p>
        </div>
    </form>
    <div id="recover_password" style="display: none;">
        <header class="page-header">
            <h2>Quên mật khẩu</h2>
        </header>
        <p>Vui lòng nhập Email được sử dụng để đăng ký tài khoản.</p>
        <form method="post" action="@Url.AccountForgotPasswordUrl()" accept-charset="UTF-8">
            @Html.AntiForgeryToken()
            <input type="hidden" value="recover_customer_password" name="form_type">

            <input type="hidden" name="utf8" value="✓">
            <label for="recover-email">Email</label>
            <input type="email" value="" name="email" id="recover-email" placeholder="Nhập Email">
            <div class="action-btn">
                <p>
                    <input type="submit" class="btn" value="Đồng ý">
                </p>
                hoặc <a href="#" onclick="hideRecoverPasswordForm();return false;">Hủy bỏ</a>
            </div>
        </form>
    </div>
</div>


<script>
    /*
    Show/hide the recover password form when requested.
    I'd suggest using some CSS3 transitions to make this change look cool,
    but this gets the job done for now.
  */
    function showRecoverPasswordForm() {
        document.getElementById('recover_password').style.display = 'block';
        document.getElementById('customer_login').style.display='none';
    }

    function hideRecoverPasswordForm() {
        document.getElementById('recover_password').style.display = 'none';
        document.getElementById('customer_login').style.display = 'block';
    }

    // Allow deep linking to the recover password form
    if (window.location.hash == '#recover') { showRecoverPasswordForm() }

    // reset_success is only true when the reset form is

</script>