    ViewBag.Title = "Thể Loại Tin Tức";
    ViewBag.LinkBack = "<li><a href=\"/Admin/TheLoaiTinTuc\">Thể Loại Tin Tức</a> </li>";
    ViewBag.MenuValue = 2;
    Layout = "~/Views/Admin/Layout.cshtml";
}
<div>
    <div>
        <div id="close" class="mheader">
            <a href="/Admin/TheLoaiTinTucThemMoi">
                <img src="/Content/Admin/Images/them-moi.png" />
            </a>
        </div>
        <div style="margin-top: 16px;">
            @Html.Raw(@Model.HtmlNhomTin)
        </div>
        <hr />
        <div style="width: 100%;">
            <div class="RadGrid RadGrid_MetroTouch table table-striped table-bordered table-hover dataTable" tabindex="0">
                @Html.Raw(@Model.Html)
            </div>
        </div>
        <div class="wpmn_page_navi"><a href="/Admin/TheLoaiTinTuc?pPage=@Model.BackPage&pType=@Model.TypeId">Back</a><span class="current">@Model.Page</span><a href="/Admin/TheLoaiTinTuc?pPage=@Model.NextPage&pType=@Model.TypeId">Next</a></div>
