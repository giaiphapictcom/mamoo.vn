@using V308CMS.Admin.Helpers.Url
@model V308CMS.Data.ProductPage
@{
    ViewBag.Title = "Hóa Đơn Mua Hàng";
    ViewBag.LinkBack = "<li><a href=" + Url.ProductOrderIndexUrl()+">Hóa Đơn Mua Hàng</a> </li>";
    ViewBag.MenuValue = 3;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div>
        <div id="close" class="mheader">
            <a href="javascript:void(0);">
                <img src="@Url.CreateNewImageUrl()" title="Thêm mới"/>
            </a>
        </div>
        <div style="margin-top:16px;">
            <select name="pGroup" id="pGroupId" onchange="ThayDoiKieuHoaDon(@Model.Page);">
                <option @V308CMS.Common.Ultility.CheckSeclectSelected(0, Model.TypeId) value="0">Chưa xử lý</option>
                <option @V308CMS.Common.Ultility.CheckSeclectSelected(1, Model.TypeId) value="1">Đã xử lý</option>
                <option @V308CMS.Common.Ultility.CheckSeclectSelected(2, Model.TypeId) value="2">Tất cả</option>
            </select>
        </div>
        <hr />
        <div style="width: 100%;">
            <div class="RadGrid RadGrid_MetroTouch table table-striped table-bordered table-hover dataTable" tabindex="0">
                @Html.Raw(Model.Html)
            </div>
        </div>
        <div class="wpmn_page_navi">
            <a href="@Url.ProductOrderIndexUrl(new {pPage =Model.BackPage,pType=Model.TypeId})">Back</a>
            <span class="current">@Model.Page</span>
            <a href="@Url.ProductOrderIndexUrl(new {pPage =Model.NextPage,pType=Model.TypeId})">Next</a>
        </div>
        <hr />
    </div>
    <div style="display: none;" role="status" aria-hidden="true">
        <div class="area"></div>
        <div class="form-loading"></div>
    </div>
</div>
